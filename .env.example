# Public runtime configuration (Vite)
# Copy to `.env` and fill values as needed. Do NOT commit `.env`.

# API Configuration
VITE_API_BASE_URL=https://api.example.com

# AI Assistant (optional)
VITE_AI_PROVIDER=local
# VITE_AI_API_KEY=
# VITE_AI_MODEL=gpt-3.5-turbo

# Payments (optional)
VITE_PAYMENT_GATEWAY=mock
# VITE_PAYMENT_PUBLIC_KEY=

# Feature flags
VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_CUSTOM_ORDERS=true
VITE_FEATURE_INTERNATIONAL_SHIPPING=true
VITE_FEATURE_WISHLIST=true
VITE_FEATURE_REVIEWS=true

# Business defaults
VITE_CURRENCY=INR
VITE_DEFAULT_SHIPPING_COST=100
VITE_FREE_SHIPPING_THRESHOLD=2000
VITE_TAX_RATE=0.18
VITE_SUPPORT_EMAIL=support@example.com

# Optional Wix (only needed to enable Wix integration during build/runtime)
# WIX_CLIENT_ID=
